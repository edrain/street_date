<!DOCTYPE html>
  <head>
    <title>Street Date</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

	<meta name="description" content="Get notified when artists you care about release new music.">	

	<meta property='og:title' content='Get notified when artists you care about release new music.'/>
	<meta property='og:url' content='http://StreetDate.info'/>
	<meta property="og:image" content='http://<%= request.host + image_path('StreetDate.png') %>' /> 
	<link rel="image_src" href='http://<%= request.host + image_path('StreetDate.png') %>' /> 
	<%= render 'layouts/shim' %>
  </head>
  <body>
	<%= render 'layouts/header' %>	
    <div class="container">
	  <% flash.each do |key, value| %>
	  	<div class="alert alert-<%=key %>"><%= value %></div>
	  <% end %>	
      <%= yield %>
	  <%= render 'layouts/footer' %>
	  <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>